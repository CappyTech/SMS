<div class="container mt-5">
  <h2 class="mb-4">Quotes</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Client</th>
        <th>Contact Ref</th>
        <th>Value</th>
        <th>Description</th>
        <th>Invoice No</th>
        <th>Invoice Date</th>
        <th>PO Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% quotes.forEach(function(quote) { %>
      <tr>
        <td><%= quote.date.toISOString().split('T')[0] %></td>
        <td><%= quote.site %></td>
        <td><%= quote.client %></td>
        <td><%= quote.contact_ref %></td>
        <td>Â£<%= quote.value.toFixed(2) %></td>
        <td><%= quote.desc %></td>
        <td><%= quote.invoice_no ? quote.invoice_no : '' %></td>
        <td><%= quote.invoice_date ? quote.invoice_date.toISOString().split('T')[0] : '' %></td>
        <td><%= quote.po_number %></td>
        <td>
          <a href="/quote/read/<%= quote.id %>" class="btn btn-info btn-sm">View</a>
          <form action="/quote/delete/<%= quote.id %>" method="post" class="d-inline">
            
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/quote/create" class="btn btn-primary">Create New Quote</a>
</div>
