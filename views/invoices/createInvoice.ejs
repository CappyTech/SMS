<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>
<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <h1 class="display-5">New Invoice</h1>
        <div class="container-fluid text-center">
            <form id="invoiceForm" action="/invoice/create" method="POST" class="needs-validation">
                <div class="row mb-3">
                    <label for="subcontractorId" class="col-sm-3 col-form-label">Subcontractor:</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <select id="subcontractorId" name="subcontractorId" class="form-select" required>
                                <option value="">Select Subcontractor</option>
                                <% subcontractors.forEach(subcontractor => { %>
                                    <option value="<%= subcontractor.id %>"><%= subcontractor.company %></option>
                                <% }); %>
                            </select>
                            <a href="/subcontractor/create">
                                <button type="button" class="btn btn-hcs-green">
                                    +
                                </button>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="invoiceNumber" class="col-sm-3 col-form-label">Invoice <i class="bi bi-123"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="invoiceNumber" name="invoiceNumber" class="form-control" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="kashflowNumber" class="col-sm-3 col-form-label">Kashflow <i class="bi bi-123"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="kashflowNumber" name="kashflowNumber" class="form-control" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="invoiceDate" class="col-sm-3 col-form-label">Invoice <i class="bi bi-calendar2-date-fill"></i></label>
                    <div class="col-sm-9">
                        <input type="date" id="invoiceDate" name="invoiceDate" class="form-control" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="remittanceDate" class="col-sm-3 col-form-label">Remittance <i class="bi bi-calendar2-date-fill"></i></label>
                    <div class="col-sm-9">
                        <input type="date" id="remittanceDate" name="remittanceDate" class="form-control">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="labourCost" class="col-sm-3 col-form-label">Labour <i class="bi bi-currency-pound"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="labourCost" name="labourCost" class="form-control" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="materialCost" class="col-sm-3 col-form-label">Materials <i class="bi bi-currency-pound"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="materialCost" name="materialCost" class="form-control" required>
                    </div>
                </div>

                <div id="cisDeductionRow" class="row mb-3" style="display: none;">
                    <label for="cisAmount" class="col-sm-3 col-form-label">CIS Deduction <i class="bi bi-bank2"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="cisAmount" name="cisAmount" class="form-control" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="grossAmount" class="col-sm-3 col-form-label">Gross <i class="bi bi-cash"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="grossAmount" name="grossAmount" class="form-control" value="Labour + Materials" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="netAmount" class="col-sm-3 col-form-label">Net <i class="bi bi-cash"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="netAmount" name="netAmount" class="form-control" value="Labour + Materials - CIS Deduction" disabled>
                    </div>
                </div>

                <div id="reverseChargeRow" class="row mb-3" style="display: none;">
                    <label for="reverseCharge" class="col-sm-3 col-form-label">Reverse Charge <i class="bi bi-wallet-fill"></i></label>
                    <div class="col-sm-9">
                        <input type="text" id="reverseCharge" name="reverseCharge" class="form-control" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="submissionDate" class="col-sm-3 col-form-label">Submission <i class="bi bi-calendar2-date-fill"></i></label>
                    <div class="col-sm-9">
                        <input type="date" id="submissionDate" name="submissionDate" class="form-control">
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-hcs-green">
                        <i class="bi bi-file-earmark-plus"></i> New Invoice
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    // Handle subcontractor selection and update form dynamically
    document.getElementById('subcontractorId').addEventListener('change', function () {
        const selectedSubcontractorId = this.value;

        if (selectedSubcontractorId) {
            fetch(`/fetch/subcontractor/${selectedSubcontractorId}`)
                .then(response => response.json())
                .then(data => {
                    // Dynamically update the CIS Deduction and Reverse Charge based on selected subcontractor
                    const cisDeductionRow = document.getElementById('cisDeductionRow');
                    const reverseChargeRow = document.getElementById('reverseChargeRow');
                    const cisAmountInput = document.getElementById('cisAmount');
                    // Display and set CIS Deduction and Reverse Charge values based on subcontractor deduction
                    if (data.deduction !== undefined) {
                        cisDeductionRow.style.display = '';
                        let cisPercentage = (data.deduction * 100).toFixed(0);
                        cisAmountInput.value = `Labour / ${cisPercentage}%`;
                    }
                })
                .catch(error => console.error('Error fetching subcontractor details:', error));
        }
    });
</script>
