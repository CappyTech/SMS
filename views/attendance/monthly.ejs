<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>

<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-center">Monthly Attendance for <%= moment(startDate).format('MMMM YYYY') %></h1>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Person</th>
                        <th>Holidays Taken</th>
                        <th>Days Without Work</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (attendance.length > 0) { %>
                        <% attendance.forEach(record => { %>
                            <tr>
                                <td><%= moment(record.date).format('DD/MM/YYYY') %></td>
                                <td><%= record.Location ? `${record.Location.address}, ${record.Location.city}, ${record.Location.postalCode}` : 'N/A' %></td>
                                <td><%= record.Employee ? record.Employee.name : record.Subcontractor.company %></td>
                                <td><%= record.holidays_taken || '0' %></td>
                                <td><%= record.days_without_work || '0' %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No attendance records found for this month.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
