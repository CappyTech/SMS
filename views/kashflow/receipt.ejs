
<div class="container my-5">
    <h1 class="mb-4 text-center">Purchases Dashboard</h1>
    <div class="row">
        <% receipts.forEach(receipt => { %>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5>Purchase #<%= receipt.InvoiceNumber %></h5>
                    <p><strong>Supplier:</strong> <%= receipt.supplier ? receipt.supplier.Name : 'N/A' %></p>
                    <p><strong>Amount:</strong> <%= formatCurrency(receipt.calcTotal) %></p>
                    <p><strong>Date:</strong> <%= new Date(receipt.InvoiceDate).toLocaleDateString() %></p>
                </div>
                <div class="card-footer text-center">
                    <a href="/kashflow/receipt/read/<%= receipt.uuid %>" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
