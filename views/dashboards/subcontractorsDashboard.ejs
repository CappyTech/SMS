<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>
<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-center">Subcontractors Dashboard</h1>
            <div class="d-flex justify-content-end mb-3">
                <a href="/subcontractor/create" class="btn btn-hcs-green">Create New Subcontractor</a>
            </div>
            <% if (subcontractors.length === 0) { %>
                <p class="text-center">No subcontractors available.</p>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Company</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% subcontractors.forEach(function(subcontractor) { %>
                                <tr>
                                    <td class="<%= subcontractor.name ? '' : 'text-warning' %>"><%= subcontractor.name ? subcontractor.name : 'N/A' %></td>
                                    <td class="<%= subcontractor.company ? '' : 'text-warning' %>"><%= subcontractor.company ? subcontractor.company : 'N/A' %></td>
                                    <td class="<%= subcontractor.contact ? '' : 'text-warning' %>"><%= subcontractor.contact ? subcontractor.contact : 'N/A' %></td>
                                    <td class="<%= subcontractor.email ? '' : 'text-warning' %>"><%= subcontractor.email ? subcontractor.email : 'N/A' %></td>
                                    <td class="<%= subcontractor.phone ? '' : 'text-warning' %>"><%= subcontractor.phone ? subcontractor.phone : 'N/A' %></td>
                                    <td>
                                        <a href="/subcontractor/read/<%= subcontractor.id %>" class="btn btn-info btn-sm">View</a>
                                        <a href="/subcontractor/update/<%= subcontractor.id %>" class="btn btn-warning btn-sm">Update</a>
                                        <form action="/subcontractor/delete/<%= subcontractor.id %>" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>
