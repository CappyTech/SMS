<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>
<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-center">Subcontractors</h1>
            <div class="row">
                <div class="col-4">
                    <ul class="scrollable-list list-group sticky-top">
                        <a class="list-group-item list-group-item-action disabled text-bg-secondary text-center" aria-disabled="true">Subcontractor List</a>
                        <% subcontractors.forEach(subcontractor => { %>
                            <a href="#<%= subcontractor.id %>" class="list-group-item list-group-item-action text-center">
                                <%= subcontractor.name %>
                            </a>
                        <% }); %>
                    </ul>
                </div>
                <div class="col-8">
                    <% subcontractors.forEach(subcontractor => { %>
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between text-bg-secondary">
                            <span>Subcontractor: <%= subcontractor.name %></span>
                            <a class="text-white" href="/subcontractor/read/<%= subcontractor.id %>">View Subcontractor</a>
                        </div>
                        <div class="card-body" id="<%= subcontractor.id %>">
                            <ul class="list-group">
                                <li class="list-group-item">Name: <%= subcontractor.name %></li>
                                <li class="list-group-item">Company: <%= subcontractor.company %></li>
                                <li class="list-group-item">CIS Number: <%= subcontractor.cisNumber %></li>
                                <li class="list-group-item">UTR Number: <%= subcontractor.utrNumber %></li>
                            </ul>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a type="button" class="btn btn-hcs-green btn-sm" href="/subcontractor/update/<%= subcontractor.id %>">Update Subcontractor</a>
                            <span>Last Updated: <%= slimDateTime(subcontractor.updatedAt, true) %></span>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
