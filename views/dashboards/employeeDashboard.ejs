<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>

<div class="container py-4">
    <h1 class="display-5">Employee Dashboard</h1>
    <p>Total Employees: <strong><%= totalEmployees %></strong></p>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
                <tr>
                    <td><%= employee.name %></td>
                    <td>
                        <a href="/employee/update/<%= employee.id %>" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/employee/delete/<%= employee.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
