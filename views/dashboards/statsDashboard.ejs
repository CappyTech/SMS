<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>
<div class="container py-4">
    <div class="d-flex justify-content-between mb-3">
        <a href="/dashboard/stats/<%= previousYear %>/<%= previousMonth %>" class="btn btn-hcs-green">&laquo; Previous</a>
        <h1 class="display-4">Period: <%= currentMonthlyReturn.periodStartDisplay %> - <%= currentMonthlyReturn.periodEndDisplay %></h1>
        <a href="/dashboard/stats/<%= nextYear %>/<%= nextMonth %>" class="btn btn-hcs-green">Next &raquo;</a>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4>Total Subcontractors</h4>
                    <p class="display-4"><%= subcontractorCount %></p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4>Total Invoices</h4>
                    <p class="display-4"><%= invoiceCount %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4>Current Tax Year</h4>
                    <p><%= currentMonthlyReturn.periodStartDisplay %> - <%= currentMonthlyReturn.periodEndDisplay %></p>
                    <p><%= taxYear.start %> - <%= taxYear.end %></p>
                    <h4>Current Monthly Return</h4>
                    <p><%= currentMonthlyReturn.periodStart %> - <%= currentMonthlyReturn.periodEnd %></p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h4>Submission Deadline</h4>
                    <p><%= currentMonthlyReturn.submissionDeadline %> (<%= currentMonthlyReturn.submissionDeadlineInDays %> days left)</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4>HMRC Update Date</h4>
                    <p><%= currentMonthlyReturn.hmrcUpdateDate %> (<%= currentMonthlyReturn.hmrcUpdateDateInDays %> days left)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>Subcontractors</h3>
            <ul class="list-group">
                <% subcontractors.forEach(subcontractor => { %>
                <li class="list-group-item">
                    <a href="/subcontractor/read/<%= subcontractor.id %>"><%= subcontractor.company %></a>
                    <div>
                        <p>Gross Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].grossTotal) %></p>
                        <p>Labour Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].labourTotal) %></p>
                        <p>Material Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].materialTotal) %></p>
                        <p>CIS Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].cisTotal) %></p>
                        <p>Net Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].netTotal) %></p>
                        <p>Reverse Charge Total: <%= formatCurrency(subcontractorTotals[subcontractor.id].reverseChargeTotal) %></p>
                    </div>
                </li>
                <% }); %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>Invoices</h3>
            <ul class="list-group">
                <% invoices.forEach(invoice => { %>
                <a href="/invoice/read/<%= invoice.id %>" class="list-group-item list-group-item-action">
                    <%= invoice.kashflowNumber %> | <%= invoice.invoiceNumber %>
                    <i class="bi bi-pencil-square" style="font-size: 0.65rem;"></i>
                </a>
                <% }); %>
            </ul>
        </div>
    </div>
</div>
