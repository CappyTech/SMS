<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>

<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-center">Jobs</h1>
            <div class="row">
                <div class="col-2">
                    <ul class="scrollable-list list-group sticky-top">
                        <a class="list-group-item list-group-item-action disabled text-bg-secondary text-center" aria-disabled="true">Job List</a>
                        <% jobs.forEach(job => { %>
                            <a href="#<%= job.id %>" class="list-group-item list-group-item-action text-center">
                                <%= job.job_ref %>
                            </a>
                        <% }); %>
                    </ul>
                </div>
                <div class="col-10">
                    <% jobs.forEach(job => { %>
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between text-bg-secondary">
                            <span>Job Ref: <%= job.job_ref %></span>
                            <a class="text-white" href="/job/read/<%= job.id %>">View Job</a>
                        </div>
                        <div class="card-body" id="<%= job.id %>">
                            <ul class="list-group">
                                <li class="list-group-item">Start Date: <%= slimDateTime(job.createdAt) %></li>
                                <li class="list-group-item">Location: <%= job.Location ? job.Location.address : 'N/A' %></li>
                                <li class="list-group-item">Client: <%= job.Client ? job.Client.name : 'N/A' %></li>
                                <li class="list-group-item">Value: <%= formatCurrency(job.value) %></li>
                                <li class="list-group-item">Status: <%= job.status %></li>
                                <li class="list-group-item">Description: <%= job.desc || 'No Description Provided' %></li>
                                <li class="list-group-item">Completion Date: <%= slimDateTime(job.completionDate) %></li>
                            </ul>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a type="button" class="btn btn-hcs-green btn-sm" href="/job/update/<%= job.id %>">Update Job</a>
                            <span>Last Updated: <%= slimDateTime(job.updatedAt, true) %></span>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
