<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>

<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <h1 class="display-5">Location Details</h1>
        <div class="container-fluid">
            <div class="card">
                <div class="card-header text-bg-secondary">
                    Location: <%= location.address %>, <%= location.city %>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Address:</strong> <%= location.address %></li>
                        <li class="list-group-item"><strong>City:</strong> <%= location.city %></li>
                        <li class="list-group-item"><strong>Postal Code:</strong> <%= location.postalCode %></li>
                        <li class="list-group-item"><strong>Country:</strong> <%= location.country %></li>
                        <li class="list-group-item"><strong>Created At:</strong> <%= slimDateTime(location.createdAt) %></li>
                        <li class="list-group-item"><strong>Last Updated:</strong> <%= slimDateTime(location.updatedAt, true) %></li>
                    </ul>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="/location/update/<%= location.id %>" class="btn btn-hcs-green">Edit Location</a>
                    <form action="/location/delete/<%= location.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this location?')">Delete Location</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
