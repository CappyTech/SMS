<!-- views/monthlyReturnsForm.ejs: -->
<div class="container mt-5">
    <h1 class="mb-4">Monthly Returns</h1>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <% subcontractors.forEach(subcontractor => { %>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><%= subcontractor.name %></h5>
                    <ul class="list-group list-group-flush">
                        <% if (subcontractor.invoices) { %>
                        <% subcontractor.invoices.forEach(invoice => { %>
                        <li class="list-group-item"><%= invoice.year %></li>
                        <% }); %>
                        <% } else { %>
                        <li class="list-group-item">No invoices available</li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>