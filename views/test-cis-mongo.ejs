<!DOCTYPE html>
<html>
<head>
  <title>Test CIS Mongo</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 2rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 0.6rem;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    caption {
      text-align: left;
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <h1>CIS-Eligible Receipts</h1>
  <table>
    <caption>Receipts with Payments from 6 Apr – 5 May 2025</caption>
    <thead>
      <tr>
        <th>Supplier Name</th>
        <th>InvoiceDBID</th>
        <th>Payment Date</th>
        <th>Payment Amount</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% receipts.forEach(receipt => { 
        const supplierName = receipt.Supplier?.Name || 'Unknown';
        receipt.Payments.forEach(payment => {
          const payDate = new Date(payment.PayDate);
          if (payDate >= new Date('2025-04-06') && payDate <= new Date('2025-05-05')) {
      %>
        <tr>
          <td><%= supplierName %></td>
          <td><%= receipt.InvoiceDBID %></td>
          <td><%= payDate.toLocaleDateString() %></td>
          <td>£<%= payment.Amount?.toFixed(2) || '0.00' %></td>
          <td><%= payment.Description || '—' %></td>
        </tr>
      <% } }); }); %>
    </tbody>
  </table>
</body>
</html>
