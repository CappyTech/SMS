<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= typeof title !=='undefined' ? title : 'Subcontractor Management System' %>
  </title>

  <link rel="icon" href="/resources/images/favicon.ico" type="image/x-icon">
  <link rel="manifest" href="/resources/manifest/manifest.json">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link href="/resources/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/resources/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/resources/css/styles.css" rel="stylesheet">
</head>

<body>
  <div class="app-wrapper d-flex flex-column flex-lg-row">
    <aside id="sidebar" class="sidebar bg-body-secondary">
      <%- include('./partials/aside.ejs') %>
    </aside>

    <main id="main-content" class="p-4 bg-body flex-grow-1">
      <%- include('./partials/topnav.ejs') %>
      <%- include('./partials/successAlert.ejs') %>
      <%- include('./partials/errorAlert.ejs') %>
      <%- body %>
    </main>
  </div>



  <!-- JS: Bootstrap & Popper -->
  <script defer src="/resources/@popperjs/core/dist/umd/popper.min.js"></script>
  <script defer src="/resources/bootstrap/dist/js/bootstrap.min.js"></script>

  <!-- JS: Bootstrap Tooltips -->
  <script defer>
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      [...tooltipTriggerList].forEach(el => new bootstrap.Tooltip(el));
    });
  </script>

  <!-- JS: Theme Toggle -->
  <script defer>
    (() => {
      const getStoredTheme = () => localStorage.getItem('theme');
      const setStoredTheme = theme => localStorage.setItem('theme', theme);
      const getPreferredTheme = () => {
        const stored = getStoredTheme();
        return stored || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      };
      const setTheme = theme => {
        document.documentElement.setAttribute('data-bs-theme', theme === 'auto' ? getPreferredTheme() : theme);
      };
      setTheme(getPreferredTheme());
      document.getElementById('darkModeToggle')?.addEventListener('change', () => {
        const newTheme = getStoredTheme() === 'dark' ? 'light' : 'dark';
        setStoredTheme(newTheme);
        setTheme(newTheme);
      });
    })();
  </script>

  <!-- JS: Service Worker -->
  <script defer>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/resources/js/service-worker.js').catch(console.error);
      });
    }
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebar');
      const main = document.getElementById('main-content');
      const topnav = document.getElementById('top-nav');

      const SIDEBAR_KEY = 'sidebarCollapsed';

      function setSidebarState(collapsed) {
        if (collapsed) {
          sidebar.classList.add('collapsed');
          sidebar.style.display = 'none';
          topnav.style.display = 'flex';
          localStorage.setItem(SIDEBAR_KEY, 'true');
        } else {
          sidebar.classList.remove('collapsed');
          sidebar.style.display = 'flex';
          topnav.style.display = 'none';
          localStorage.setItem(SIDEBAR_KEY, 'false');
        }
      }

      // Apply saved state on load
      const isCollapsed = localStorage.getItem(SIDEBAR_KEY) === 'true';
      setSidebarState(isCollapsed);

      // Toggle on button click
      document.querySelectorAll('.toggle-sidebar').forEach(button => {
        button.addEventListener('click', () => {
          const isCollapsed = sidebar.classList.contains('collapsed');
          setSidebarState(!isCollapsed);
        });
      });
    });
  </script>
</body>

</html>