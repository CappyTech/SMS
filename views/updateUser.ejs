<!-- views/updateUser.ejs -->
<div class="container mt-2">
    <h1>Edit User</h1>
    <form action="/user/update/<%= user.id %>" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" value="<%= user.username %>" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>" required>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <select name="role" id="role" class="form-select" required>
                <option value="subcontractor" <%= user.role === 'subcontractor' ? 'selected' : '' %>>Subcontractor</option>
                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                <option value="accountant" <%= user.role === 'accountant' ? 'selected' : '' %>>Accountant</option>
                <option value="hmrc" <%= user.role === 'hmrc' ? 'selected' : '' %>>HMRC</option>
                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
            </select>
        </div>
        <!-- Add other user details to edit here if needed -->
        <button type="submit" class="btn btn-primary">Update User</button>
    </form>
    <form action="/user/delete/<%= user.id %>" method="POST"
        onsubmit="return confirm('Are you sure you want to delete this User?');">
        <button type="submit" class="btn btn-danger mt-3">Delete User</button>
    </form>
</div>