<%- include('./partials/successAlert.ejs') %>
<%- include('./partials/errorAlerts.ejs') %>

<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
        <h1 class="mt-4"><%= error.title %></h1>
        <p class="lead"><%= error.message %></p>
        <div class="alert alert-warning">
            <pre><code><%= error.stack %></code></pre>
        </div>
        <a href="/" class="btn btn-hcs-red">Return to Home</a>
    </div>
</div>