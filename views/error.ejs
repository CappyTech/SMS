<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
        <h1 class="mt-4"><%= error.title %></h1>
        <p class="lead text-muted"><%= error.message %></p>
        <% if (error.stack) { %>
            <div class="alert alert-warning mt-3">
                <details>
                    <summary>View Stack Trace</summary>
                    <pre><code><%= error.stack %></code></pre>
                </details>
            </div>
        <% } %>
        <a href="mailto:jack.oldfield@heroncs.co.uk?subject=Error Report&body=Error: <%= error.message %> Stack: <%= error.stack %>" class="btn btn-secondary mt-4">Report This Issue</a>
        <a href="/" class="btn btn-hcs-red mt-4">Return to Home</a>
    </div>
</div>
