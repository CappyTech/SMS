<%- include('../partials/successAlert.ejs') %>
<%- include('../partials/errorAlerts.ejs') %>

<div class="container py-4">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-center">Employee: <%= employee.name %></h1>
            <div class="card">
                <div class="card-header d-flex justify-content-between text-bg-secondary">
                    <span>Employee ID: <%= employee.id %></span>
                    <a class="text-white" href="/employee/update/<%= employee.id %>">Update Employee</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Column: Labels -->
                        <div class="col-6">
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Name</strong></li>
                                <li class="list-group-item"><strong>Email</strong></li>
                                <li class="list-group-item"><strong>Phone Number</strong></li>
                                <li class="list-group-item"><strong>Position</strong></li>
                                <li class="list-group-item"><strong>Type</strong></li>
                                <li class="list-group-item"><strong>Status</strong></li>
                                <li class="list-group-item"><strong>Hire Date</strong></li>
                                <li class="list-group-item"><strong>Manager</strong></li>
                                <li class="list-group-item"><strong>Emergency Contact Name</strong></li>
                                <li class="list-group-item"><strong>Emergency Contact Number</strong></li>
                            </ul>
                        </div>

                        <!-- Right Column: Values -->
                        <div class="col-6">
                            <ul class="list-group">
                                <li class="list-group-item"><%= employee.name %></li>
                                <li class="list-group-item"><%= employee.email ?? 'N/A' %></li>
                                <li class="list-group-item"><%= employee.phoneNumber ?? 'N/A' %></li>
                                <li class="list-group-item"><%= employee.position ?? 'N/A' %></li>
                                <li class="list-group-item"><%= employee.type ?? 'N/A' %></li>
                                <li class="list-group-item"><%= employee.status ?? 'N/A' %></li>
                                <li class="list-group-item"><%= slimDateTime(employee.hireDate) %></li>
                                <li class="list-group-item"><a href="/employee/read/<%= employee.managerId ?? '#' %>"><%= employee.managerId ?? 'N/A' %></a></li>
                                <li class="list-group-item"><%= employee.contactName ?? 'N/A' %></li>
                                <li class="list-group-item"><%= employee.contactNumber ?? 'N/A' %></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a type="button" class="btn btn-hcs-green btn-sm" href="/employee/update/<%= employee.id %>">Update Employee</a>
                    <!-- Use slimDateTime function for updatedAt -->
                    <span>Last Updated: <%= slimDateTime(employee.updatedAt, true) %></span>
                </div>
            </div>
        </div>
    </div>
</div>
